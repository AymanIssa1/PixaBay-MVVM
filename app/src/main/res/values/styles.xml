<resources>

    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="hitImageViewStyle">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="hitItemLinearLayoutStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="hitItemImageStyle">
        <item name="android:padding">@dimen/hit_details_image_padding_dimen</item>
    </style>

    <style name="hitItemTextStyle">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/hit_details_text_size_dimen</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="hitDetailsCardViewStyle" parent="CardView">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">8dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="hitDetailsLinearLayoutStyle">
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="hitDetailsImageViewStyle">
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">120dp</item>
        <item name="android:layout_height">120dp</item>
    </style>

    <style name="hitDetailsTextStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
    </style>


    <!-- Status parent style -->
    <style name="statusBackgroundStyle">
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="statusTitleTextStyle">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="statusDescriptionTextStyle">
        <item name="android:textSize">12sp</item>
    </style>

    <!-- Status Info style -->
    <style name="statusInfoBackgroundStyle" parent="statusBackgroundStyle">
        <item name="android:background">@color/infoStatusBackgroundColor</item>
    </style>

    <style name="statusInfoTitleTextStyle" parent="statusTitleTextStyle">
        <item name="android:textColor">@color/infoStatusTextColor</item>
    </style>

    <style name="statusInfoDescriptionTextStyle" parent="statusDescriptionTextStyle">
        <item name="android:textColor">@color/infoStatusTextColor</item>
    </style>

    <!-- Status Success style -->
    <style name="statusSuccessBackgroundStyle" parent="statusBackgroundStyle">
        <item name="android:background">@color/successStatusBackgroundColor</item>
    </style>

    <style name="statusSuccessTitleTextStyle" parent="statusTitleTextStyle">
        <item name="android:textColor">@color/successStatusTextColor</item>
    </style>

    <style name="statusSuccessDescriptionTextStyle" parent="statusDescriptionTextStyle">
        <item name="android:textColor">@color/successStatusTextColor</item>
    </style>

    <!-- Status Error style -->
    <style name="statusErrorBackgroundStyle" parent="statusBackgroundStyle">
        <item name="android:background">@color/errorStatusBackgroundColor</item>
    </style>

    <style name="statusErrorTitleTextStyle" parent="statusTitleTextStyle">
        <item name="android:textColor">@color/errorStatusTextColor</item>
    </style>

    <style name="statusErrorDescriptionTextStyle" parent="statusDescriptionTextStyle">
        <item name="android:textColor">@color/errorStatusTextColor</item>
    </style>

</resources>
